<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.PasswordField?>
<AnchorPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" styleClass="login" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.epics.controllers.LoginController">

    <VBox alignment="CENTER" layoutX="348.0" layoutY="26.0" prefWidth="200.0" styleClass="bg-black-50"
          AnchorPane.leftAnchor="16.0" AnchorPane.topAnchor="120.0">
        <TextField fx:id="usernameField" minWidth="200.0" promptText="username"/>
        <PasswordField fx:id="passwordField" minWidth="200.0" promptText="password">
            <VBox.margin>
                <Insets top="16.0"/>
            </VBox.margin>
        </PasswordField>

        <HBox alignment="CENTER" spacing="16.0">
            <Button fx:id="cancelButton" prefHeight="0.0" prefWidth="92.0" text="Cancel"/>
            <Button fx:id="loginButton" prefHeight="0.0" prefWidth="92.0" styleClass="btn-primary" text="Login"/>
            <VBox.margin>
                <Insets top="24.0"/>
            </VBox.margin>
        </HBox>
        <padding>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
        </padding>

    </VBox>

</AnchorPane>