<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.epics.controllers.admin.TaskManagementController">
    <children>
        <HBox layoutX="64.0" layoutY="97.0" prefHeight="480.0" prefWidth="720.0" spacing="16.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                  <TableView fx:id="inmatesTable" prefHeight="200.0" prefWidth="200.0">
                      <columns>
                          <TableColumn fx:id="inmateCol" prefWidth="75.0" text="Inmates" />
                      </columns>
                      <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                      </columnResizePolicy>
                      <contextMenu>
                          <ContextMenu>
                              <items>
                                  <MenuItem fx:id="viewTasksMenuItem" mnemonicParsing="false" text="View Tasks" />
                              </items>
                          </ContextMenu>
                      </contextMenu>
                  </TableView>
                  <TableView fx:id="inmateTaskTable" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                      <columns>
                          <TableColumn fx:id="titleCol" prefWidth="75.0" text="Title" />
                          <TableColumn fx:id="descriptionCol" prefWidth="75.0" text="Description" />
                          <TableColumn fx:id="statusCol" prefWidth="75.0" text="Status" />
                      </columns>
                      <columnResizePolicy>
                          <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                      </columnResizePolicy>
                  </TableView>
            </children>
        </HBox>
    </children>
</AnchorPane>
