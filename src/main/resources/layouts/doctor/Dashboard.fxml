<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="480.0" prefWidth="720.0" stylesheets="@../../styles/master.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.epics.controllers.doctor.DashboardController">
    <children>
        <VBox prefHeight="480.0" prefWidth="720.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <VBox alignment="CENTER_LEFT" prefHeight="100.0">
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets left="16.0"/>
                    </padding>
                    <styleClass>
                        <String fx:value="bg-primary"/>
                        <String fx:value="text-white"/>
                    </styleClass>
                    <children>
                        <Label styleClass="text-white" text="Prison Management Software">
                            <font>
                                <Font size="32.0"/>
                            </font>
                        </Label>
                        <Label styleClass="text-white-50" text="Doctors Dashboard"/>
                    </children>
                </VBox>
                <GridPane alignment="CENTER" hgap="16.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="223.0"
                          prefWidth="694.0" vgap="32.0" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="96.0" minHeight="96.0" prefHeight="96.0" valignment="CENTER"/>
                        <RowConstraints maxHeight="96.0" minHeight="96.0" prefHeight="96.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="96.0" minHeight="96.0" prefHeight="96.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Button fx:id="usersButton" contentDisplay="TOP" mnemonicParsing="false"
                                prefHeight="96.0" prefWidth="128.0" styleClass="btn-primary" text="Users">
                            <graphic>
                                <FontIcon iconLiteral="fa-users" iconSize="32" styleClass="icon-white"/>
                            </graphic>
                        </Button>
                        <Button fx:id="healthRecordsButton" contentDisplay="TOP" mnemonicParsing="false"
                                prefHeight="96.0" prefWidth="128.0" styleClass="btn-primary" text="Health Records"
                                GridPane.columnIndex="1">
                            <graphic>
                                <FontIcon iconLiteral="fa-file" iconSize="32" styleClass="icon-white"/>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0"/>
                    </padding>
                    <VBox.margin>
                        <Insets top="16.0"/>
                    </VBox.margin>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
